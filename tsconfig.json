{
  "include": [ "src/**/*" ],
  "exclude": [ "node_modules" ],

  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ESNext",
    "jsx": "react",
    "moduleResolution": "node",
    "outDir": "build",
    "baseUrl": ".",

    "plugins": [
      {
        "name": "typescript-tslint-plugin",
        "suppressionWhileTypeErrorsPresent": true
      }
    ]
  }
}
